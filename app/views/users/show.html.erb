<%provide(:title, @users.name) %>
<div class ="row">
	<aside class ="span4">
		<section>
			<h1>
			<%= gravatar_for @users%> 
			<%= @users.name %> 
			</h1>
		</section>
		<section>
      <%= render 'shared/stats' %>
    </section>
	</aside>
	<div class ="span8">
		<%= render 'follow_form' if signed_in? %>
		<% if @users.microposts.any?%>
		<h3>Microposts(<%= @users.microposts.count%>) </h3>
		<ol class = "microposts">
			<%= render @microposts %>
		</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>
